pipeline {
    agent any

    options {
        skipDefaultCheckout()
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/Sandygithubit/devops-final-project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t devops-app:1 .'
            }
        }

        stage('Run Docker Container (Test)') {
            steps {
                sh '''
                docker rm -f devops-test || true
                docker run -d -p 0:3000 --name devops-test devops-app:1
                '''
            }
        }

        stage('Deploy to Kubernetes (Local)') {
            steps {
                sh 'kubectl apply -f k8s/'
            }
        }
    }
}
